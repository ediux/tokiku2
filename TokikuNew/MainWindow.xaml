<Window x:Class="TokikuNew.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TokikuNew"
        mc:Ignorable="d"
        Title="東菊金屬 ERP System" Height="350" Width="733.195" WindowState="Maximized" Icon="16x16.png">
    <Window.Resources>
        
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="22"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="48"/>
            <RowDefinition Height="27"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" FontSize="17">
            <MenuItem Header="專案">
                
            </MenuItem>
            <MenuItem Header="主檔建立" FontSize="17">
                <MenuItem Header="專案"></MenuItem>
            </MenuItem>
            <MenuItem Header="用料需求"></MenuItem>
            <MenuItem Header="鋁擠型"></MenuItem>
            <MenuItem Header="框"></MenuItem>
            <MenuItem Header="玻璃"></MenuItem>
            <MenuItem Header="鋁板"></MenuItem>
            <MenuItem Header="鐵件"></MenuItem>
            <MenuItem Header="其他材料"></MenuItem>
            <MenuItem Header="報表"></MenuItem>
            <MenuItem Header="帳務"></MenuItem>
            <MenuItem Header="系統管理" FontSize="17">
                <MenuItem Header="人員管理" ></MenuItem>
                <Separator/>
                <MenuItem Header="結束程式" Name="ExitApp" Click="ExitApp_Click"></MenuItem>
            </MenuItem>
        </Menu>
        <TabControl Grid.Row="1" Margin="0,0,0,0" x:Name="Workspaces">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="Black" CornerRadius="4,4,0,0" Margin="2,0">
                                    <StackPanel Orientation="Horizontal" x:Name="TitleBlock" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="2,2">
                                        <TextBlock Text="{Binding Header, RelativeSource={RelativeSource TemplatedParent}}"></TextBlock>
                                        <Button x:Name="btnTabClose" Margin="5,0,0,0" FontSize="9" Width="12" Height="12" Content="X" BorderThickness="0" Background="Transparent" Click="btnTabClose_Click" ></Button>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="LightSkyBlue"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="White"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <TabItem Header="d">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <StackPanel Grid.Row="2" Orientation="Horizontal" >
            <Button Margin="2" Width="48" Name="btnF1">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="F1" TextAlignment="Center"></TextBlock>
                    <TextBlock Text="新增" TextAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Margin="2" Width="48">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="F2" TextAlignment="Center"></TextBlock>
                    <TextBlock Text="修改" TextAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Margin="2" Width="48">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="F3" TextAlignment="Center"></TextBlock>
                    <TextBlock Text="存檔" TextAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Margin="2" Width="48">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="F4" TextAlignment="Center"></TextBlock>
                    <TextBlock Text="查詢" TextAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Margin="2" Width="48">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="F7" TextAlignment="Center"></TextBlock>
                    <TextBlock Text="Excel" TextAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Margin="2" Width="48">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="F9" TextAlignment="Center"></TextBlock>
                    <TextBlock Text="取消" TextAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Margin="2" Width="48">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="F10" TextAlignment="Center"></TextBlock>
                    <TextBlock Text="結束" TextAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Margin="2" Width="48">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="F11" TextAlignment="Center"></TextBlock>
                    <TextBlock Text="新增行" TextAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Margin="2" Width="48">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="F12" TextAlignment="Center"></TextBlock>
                    <TextBlock Text="刪除行" TextAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>
        <StatusBar Margin="0" Grid.Row="3">
            <StackPanel Orientation="Horizontal">
                <Image Width="16" Height="16"/>
                <TextBlock Name="userNameDisplay" Text=""/>
            </StackPanel>
        </StatusBar>
    </Grid>
</Window>
