<Window xmlns:Views="clr-namespace:TokikuNew.Views" x:Name="mainwindow"  x:Class="TokikuNew.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:TokikuNew" 
        xmlns:controls="clr-namespace:TokikuNew.Controls"
        xmlns:vm="clr-namespace:Tokiku.ViewModels;assembly=Tokiku.ViewModels"
        mc:Ignorable="d"        
        Title="東菊金屬 ERP System" Height="768" Width="1366" WindowState="Maximized" Icon="{DynamicResource Logo}"
        Loaded="Window_Loaded" Background="{DynamicResource WindowBackgroundBrush}" 
        Initialized="Window_Initialized">
    <Window.Resources>
        <vm:RedirectCommand x:Key="redirect" RoutingName="MainWindow" />
    </Window.Resources>
    <!--<Window.CommandBindings>
        <CommandBinding x:Name="OpenNewTabItemCommand" Command="{StaticResource OpenNewTabItem}"
                        />
    </Window.CommandBindings>-->
    <Viewbox Stretch="Fill"
             Margin="0" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" >
        <Grid Width="1366" Height="768">
            <Grid.RowDefinitions>
                <RowDefinition Height="27"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="27"/>
            </Grid.RowDefinitions>
            <Menu Grid.Row="0">
                <MenuItem Header="主檔" Name="MI_Main" >
                    <MenuItem Header="廠商主檔" Name="MI_Main_Vendor" vm:CommandRoutingManager.Command="{Binding Source={ StaticResource OpenNewTabItem}}" vm:CommandRoutingManager.CommandParameter="{StaticResource OpenVendorListView}" vm:CommandRoutingManager.RoutingName="OpenVendorListView"/>
                    <MenuItem Header="客戶主檔" Name="MI_Main_Client" Command="{Binding Source={StaticResource OpenNewTabItem}}" CommandParameter="{StaticResource OpenClientListView}"/>
                    <MenuItem Header="模具總表" Name="MI_Main_Molds" Command="{Binding Source={StaticResource OpenNewTabItem}}" CommandParameter="{StaticResource OpenMaterialsTotalView}"/>
                </MenuItem>
                <MenuItem Header="報表" Name="MI_Reports" ></MenuItem>
                <MenuItem Header="帳務" Name="MI_Finance" >
                    <MenuItem Header="本票管理" Name="本票管理" Command="{Binding Source={StaticResource OpenNewTabItem}}" CommandParameter="{StaticResource OpenPromissoryNoteManagementView}"  />
                    <MenuItem Header="合約管理" Name="合約管理" Command="{Binding Source={StaticResource OpenNewTabItem}}" CommandParameter="{StaticResource OpenContractManagementView}" />
                    <!-- MenuItem Header="專案合約管理">
                        <MenuItem Header="本約工程" Name="本約工程" Click="本約工程_Click" />
                        <MenuItem Header="追加工程" Name="追加工程" Click="追加工程_Click" />
                        <MenuItem Header="修繕工程" Name="修繕工程" Click="修繕工程_Click" />
                    </MenuItem>
                    <MenuItem Header="專案成本估算">
                        <MenuItem Header="本約工程標單項目" Name="本約工程標單項目" Click="本約工程標單項目_Click" />
                        <MenuItem Header="本約工程實際成本" Name="本約工程實際成本" Click="本約工程實際成本_Click" />
                        <MenuItem Header="追加工程標單項目" Name="追加工程標單項目" Click="追加工程標單項目_Click" />
                        <MenuItem Header="追加工程實際成本" Name="追加工程實際成本" Click="追加工程實際成本_Click" />
                        <MenuItem Header="修繕工程實際成本" Name="修繕工程實際成本" Click="修繕工程實際成本_Click" />
                    </MenuItem -->
                </MenuItem>
                <MenuItem Header="系統管理">
                    <MenuItem Header="選項" Name="MI_SystemOption" />
                    <MenuItem Header="人員管理" Name="MI_System_Members" vm:CommandRoutingManager.Command="{Binding Source={StaticResource OpenNewTabItem}}" vm:CommandRoutingManager.CommandParameter="{StaticResource OpenSystemMembersView}" ></MenuItem>
                    <MenuItem Header="角色管理" Name="MI_System_Roles" vm:CommandRoutingManager.Command="{Binding Source={StaticResource OpenNewTabItem}}" vm:CommandRoutingManager.CommandParameter="{StaticResource OpenSystemRolesView}"></MenuItem>
                    <Separator/>
                    <MenuItem Header="結束程式" Name="ExitApp" Click="ExitApp_Click"></MenuItem>
                </MenuItem>
            </Menu>
            <!--<controls:MultiPageManager Grid.Row="1" Margin="0,0,0,0" x:Name="Workspaces" FontSize="9" Command="{StaticResource OpenNewTabItem}">
                <TabItem Header="專案列表" >
                    <Views:ProjectSelectListView x:Name="ProjectSelectionPage" SelectedProjectChanged="ProjectSelectionPage_SelectedProjectChanged" DataContext="{Binding Projects}"  />
                </TabItem>
            </controls:MultiPageManager>-->
            <TabControl Grid.Row="1" Margin="0,0,0,0" x:Name="Workspaces" FontSize="9" vm:CommandRoutingManager.Command="{StaticResource OpenNewTabItem}">
                <TabItem Header="專案列表" >
                    <Views:ProjectSelectListView x:Name="ProjectSelectionPage" />
                </TabItem>
            </TabControl>
            <StatusBar Margin="0" Grid.Row="3">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="1" FontFamily="Segoe MDL2 Assets" Text="&#xe187;" VerticalAlignment="Center" HorizontalAlignment="Center" />
                    <TextBlock Margin="1,0" Name="userNameDisplay" Text="{Binding LoginedUser.UserName}"/>
                </StackPanel>
            </StatusBar>
        </Grid>
    </Viewbox>

</Window>
