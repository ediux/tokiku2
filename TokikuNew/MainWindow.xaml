<Window x:Class="TokikuNew.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TokikuNew"
        mc:Ignorable="d"
        Title="東菊金屬 ERP System" Height="350" Width="525" WindowState="Maximized" Icon="16x16.png">
    <Window.Resources>
        <Style x:Key="TabItemTemplate" TargetType="{x:Type TabItem}">
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Border BorderThickness="1" BorderBrush="Black">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Path=Header}"></TextBlock>
                                <Button Content="X" BorderThickness="0" Background="Transparent"></Button>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="22"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="48"/>
            <RowDefinition Height="27"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="專案" FontSize="17">
                <MenuItem Header="開啟專案"></MenuItem>
                <MenuItem Header="管理專案"></MenuItem>
            </MenuItem>
            <MenuItem Header="系統管理" FontSize="17">
                <MenuItem Header="人員管理" ></MenuItem>
                <Separator/>
                <MenuItem Header="結束程式"></MenuItem>
            </MenuItem>
        </Menu>
        <TabControl Grid.Row="1" Margin="0,0,0,0" x:Name="Workspaces">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="Black" CornerRadius="4,4,0,0" Margin="2,0">
                                    <StackPanel Orientation="Horizontal" x:Name="TitleBlock" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="2,2">
                                        <TextBlock Text="{Binding Header, RelativeSource={RelativeSource TemplatedParent}}"></TextBlock>
                                        <Button x:Name="btnTabClose" Margin="5,0,0,0" FontSize="9" Width="12" Height="12" Content="X" BorderThickness="0" Background="Transparent" Click="btnTabClose_Click" ></Button>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="LightSkyBlue"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="White"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <TabItem Header="d">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <StackPanel Grid.Row="2" Orientation="Horizontal" >
            <Button Margin="2" Width="48">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="F1" TextAlignment="Center"></TextBlock>
                    <TextBlock Text="新增" TextAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>
        <StatusBar Margin="0" Grid.Row="3"/>
    </Grid>
</Window>
