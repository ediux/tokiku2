<Window x:Name="mainwindow"  x:Class="TokikuNew.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:TokikuNew" 
        xmlns:vm="clr-namespace:Tokiku.ViewModels;assembly=Tokiku.ViewModels"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:helpers="clr-namespace:TokikuNew.Helpers"
        mc:Ignorable="d"        
        Title="東菊金屬 ERP System" Height="768" Width="1366" WindowState="Maximized" Icon="{DynamicResource Logo}"
         Background="{DynamicResource WindowBackgroundBrush}">
    <i:Interaction.Behaviors>
        <helpers:OnWindowCloseBehavior />
    </i:Interaction.Behaviors>
    <Window.Resources>

        <!--<vm:RedirectCommand x:Key="redirect" RoutingName="MainWindow" />
        <vm:OpenWindowCommand x:Key="openwin"  />-->

    </Window.Resources>
    <Viewbox Stretch="Fill"
             Margin="0" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" >
        <Grid Width="1366" Height="768">
            <Grid.RowDefinitions>
                <RowDefinition Height="27"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="27"/>
            </Grid.RowDefinitions>
            <Menu Grid.Row="0">
                <MenuItem Header="{Binding Current.MainViewModel.MainMenus[0].Header ,Source={StaticResource ViewModelLocator}}" Name="MI_Main" >
                    <MenuItem Header="{Binding Current.MainViewModel.MainMenus[0].SubMenus[0].Header ,Source={StaticResource ViewModelLocator}}" Name="MI_Main_Vendor" />
                    <MenuItem Header="{Binding Current.MainViewModel.MainMenus[0].SubMenus[1].Header ,Source={StaticResource ViewModelLocator}}" Name="MI_Main_Client" />
                    <MenuItem Header="{Binding Current.MainViewModel.MainMenus[0].SubMenus[2].Header ,Source={StaticResource ViewModelLocator}}" Name="MI_Main_Molds" />
                </MenuItem>
                <MenuItem Header="{Binding Current.MainViewModel.MainMenus[1].Header ,Source={StaticResource ViewModelLocator}}" Name="MI_Reports" />
                <MenuItem Header="{Binding Current.MainViewModel.MainMenus[2].Header ,Source={StaticResource ViewModelLocator}}" Name="MI_Finance">
                    <MenuItem Header="{Binding Current.MainViewModel.MainMenus[2].SubMenus[0].Header ,Source={StaticResource ViewModelLocator}}" Name="本票管理" />
                    <MenuItem Header="{Binding Current.MainViewModel.MainMenus[2].SubMenus[1].Header ,Source={StaticResource ViewModelLocator}}" Name="合約管理" />
                </MenuItem>

                <!--
                
                <MenuItem Header="帳務" Name="MI_Finance" >
                    
                    -->
                <!--< MenuItem Header="專案合約管理">
                        <MenuItem Header="本約工程" Name="本約工程" Click="本約工程_Click" />
                        <MenuItem Header="追加工程" Name="追加工程" Click="追加工程_Click" />
                        <MenuItem Header="修繕工程" Name="修繕工程" Click="修繕工程_Click" />
                    </MenuItem>
                    <MenuItem Header="專案成本估算">
                        <MenuItem Header="本約工程標單項目" Name="本約工程標單項目" Click="本約工程標單項目_Click" />
                        <MenuItem Header="本約工程實際成本" Name="本約工程實際成本" Click="本約工程實際成本_Click" />
                        <MenuItem Header="追加工程標單項目" Name="追加工程標單項目" Click="追加工程標單項目_Click" />
                        <MenuItem Header="追加工程實際成本" Name="追加工程實際成本" Click="追加工程實際成本_Click" />
                        <MenuItem Header="修繕工程實際成本" Name="修繕工程實際成本" Click="修繕工程實際成本_Click" />
                    </MenuItem>
                    
                </MenuItem>
                <MenuItem Header="系統管理">
                    <MenuItem Header="選項" Name="MI_SystemOption" vm:CommandRoutingManager.Command="{StaticResource openwin}" />
                    <MenuItem Header="人員管理" Name="MI_System_Members" vm:CommandRoutingManager.Command="{Binding Source={StaticResource OpenNewTabItem}}" vm:CommandRoutingManager.CommandParameter="{StaticResource OpenSystemMembersView}" vm:CommandRoutingManager.RoutingName="SystemMembersView" />
                    <MenuItem Header="角色管理" Name="MI_System_Roles" vm:CommandRoutingManager.Command="{Binding Source={StaticResource OpenNewTabItem}}" vm:CommandRoutingManager.CommandParameter="{StaticResource OpenSystemRolesView}" vm:CommandRoutingManager.RoutingName="SystemRolesView" />
                    <MenuItem Header="結束程式" Name="ExitApp" Click="ExitApp_Click"></MenuItem>
                </MenuItem>-->
            </Menu>

            <TabControl Grid.Row="1" Margin="0,0,0,0" x:Name="Workspaces" FontSize="9" TabStripPlacement="Top"
                        ItemsSource="{Binding Current.MainViewModel.FeaturesTabs ,Source={StaticResource ViewModelLocator}}">
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Header}"/>
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <ContentPresenter Content="{Binding ContentView}"/>
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>
            <StatusBar Margin="0" Grid.Row="3">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="1" FontFamily="Segoe MDL2 Assets" Text="&#xe187;" VerticalAlignment="Center" HorizontalAlignment="Center" />
                    <TextBlock Margin="1,0" Name="userNameDisplay" Text="{Binding Current.MainViewModel.LoginedUser.UserName ,Source={StaticResource ViewModelLocator}}"/>
                </StackPanel>
            </StatusBar>
        </Grid>
    </Viewbox>

</Window>
