<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:Tokiku.ViewModels;assembly=Tokiku.ViewModels"
                    xmlns:view="clr-namespace:TokikuNew.Views"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"                  
                    xmlns:cmd="clr-namespace:TokikuNew.Commands"
                    xmlns:ValueConverters="clr-namespace:TokikuNew.ValueConverters">
    <!--資料來源-->
    <ObjectDataProvider x:Key="ProjectSource" ObjectType="{x:Type vm:ProjectsViewModel}" MethodName="Query">
        <ObjectDataProvider.MethodParameters>
            <x:Static Member="sys:Guid.Empty" />
        </ObjectDataProvider.MethodParameters>
    </ObjectDataProvider>
    <ObjectDataProvider x:Key="MaterialCategoriesSource" ObjectType="{x:Type vm:MaterialCategoriesViewModelCollection}" MethodName="Query"/>
    <ObjectDataProvider x:Key="StatesSource" ObjectType="{x:Type vm:StatesViewModelCollection}" MethodName="Query">
    </ObjectDataProvider>
    <ObjectDataProvider x:Key="TicketTypesSource" ObjectType="{x:Type vm:TicketTypesViewModelCollection}" MethodName="Query"/>
    <ObjectDataProvider x:Key="TicketPeriodsSource" ObjectType="{x:Type vm:TicketPeriodsViewModelCollection}" MethodName="Query"/>
    <ObjectDataProvider x:Key="TranscationCategoriesSource" ObjectType="{x:Type vm:TranscationCategoriesViewModelCollection}" MethodName="Query"/>
    <ObjectDataProvider x:Key="PaymentTypesSource" ObjectType="{x:Type vm:PaymentTypesManageViewModelCollection}" MethodName="Query"/>
    <ObjectDataProvider x:Key="VoidStateListSource" ObjectType="{x:Type vm:VoidViewModelCollection}" MethodName="Query"/>
    <ObjectDataProvider x:Key="ConstructionAtlasReplySelectList" ObjectType="{x:Type vm:ConstructionAtlasReplyContextViewModelCollection}" MethodName="Query"/>

    <ObjectDataProvider x:Key="ManufactureList" ObjectType="{x:Type vm:ManufacturersViewModelCollection}" MethodName="Query"/>
    <ObjectDataProvider ObjectType="{x:Type vm:OrderDetailViewModelCollection}" x:Key="AluminumExtrusionOrderSource2" MethodName="Query"  >

    </ObjectDataProvider>
    <ObjectDataProvider x:Key="RequiredSource" ObjectType="{x:Type vm:RequiredViewModel}" MethodName="CreateNew">
        <ObjectDataProvider.MethodParameters>
            <x:Static Member="sys:String.Empty"/>
        </ObjectDataProvider.MethodParameters>
    </ObjectDataProvider>
    <ObjectDataProvider x:Key="RequiredDetailSource" ObjectType="{x:Type vm:RequiredDetailViewModelCollection}" MethodName="Query">
        <ObjectDataProvider.MethodParameters>
            <x:Static Member="sys:Guid.Empty"/>
        </ObjectDataProvider.MethodParameters>
    </ObjectDataProvider>
    <ObjectDataProvider x:Key="ControlTableListSource" ObjectType="{x:Type vm:RequiredControlTableViewModelCollection}" MethodName="Query">
        <ObjectDataProvider.MethodParameters>
            <x:Static Member="sys:Guid.Empty"/>
        </ObjectDataProvider.MethodParameters>
    </ObjectDataProvider>
    <!--<viewmodels:AluminumExtrusionOrderViewModelCollection x:Key="AluminumExtrusionOrderSource" />-->
    <ObjectDataProvider ObjectType="{x:Type vm:預付款保證票ViewModel}" x:Key="預付款保證票清單" />
    <ObjectDataProvider ObjectType="{x:Type vm:保固票ViewModelCollection}" x:Key="保固票清單" />
    <ObjectDataProvider ObjectType="{x:Type vm:PromissoryNoteManagementViewModelCollection}" x:Key="PromissoryNoteManagementSource" />

    <!--轉換器-->
    <ValueConverters:DateTime2StringFormatingValueConverter x:Key="FormatedDatetime"/>
    <ValueConverters:ReplyContentValueConverter x:Key="AtlasReplayContents"/>
    <ValueConverters:NOTGateValueConverter x:Key="NOTGateValueConverter"/>
    <ValueConverters:RadioButtonSwitchValueConverter x:Key="RadioButtonSwitchValueConverter" />
    <ValueConverters:BooleanToVisibilityValueConveter x:Key="BooleanToVisibilityValueConveter"/>
    <ValueConverters:DocumentLifeCycleStateToVisibilityValueConverter x:Key="DocumentLifeCycleStateToVisibilityValueConverter"/>
    <ValueConverters:ReadModeToDisabledValueConverter x:Key="ReadModeToDisabledValueConverter"/>
    <ValueConverters:StatesCodeToTextValueConverter x:Key="StatesCodeToTextValueConverter"/>
    <ValueConverters:ReadModeToVisibilityValueConverter x:Key="ReadModeToVisibilityValueConverter"/>
    <ValueConverters:ReadModeToEnabledValueConverter x:Key="ReadModeToEnabledValueConverter" />
    <ValueConverters:Number2DateTimeValueConverter x:Key="Number2DateTimeValueConverter"/>
    <ValueConverters:VoidToStateTextValueConverter x:Key="Void2TextValueConvterver" />
    <BitmapImage x:Key="Logo" UriSource="/Resources/16x16.png" />
    <BitmapImage x:Key="Banner" UriSource="/Resources/TokikuLogo.gif" />
    <!--系統與自訂命令-->
    <RoutedUICommand x:Key="Modify" Text="修改" />
    <RoutedUICommand x:Key="Save" Text="暫存"/>
    <RoutedUICommand x:Key="Query" Text="查詢"  />
    <RoutedUICommand x:Key="Commit" Text="確認送出"/>
    <RoutedUICommand x:Key="Features" Text="功能"/>
    <RoutedUICommand x:Key="RunExcel" Text="Run Excel App" />
    <RoutedUICommand x:Key="Cancel" Text="取消" />
    <RoutedUICommand x:Key="AddColumn" Text="新增行"/>
    <RoutedUICommand x:Key="AddRow" Text="新增列"/>
    <vm:RedirectCommand x:Key="OpenNewTabItem"  />
    <RoutedUICommand x:Key="CloseTabItem" Text="關閉分頁"/>
    <RoutedUICommand x:Key="ResetFiliter" Text="重設查詢" />
    <RoutedUICommand x:Key="QueryRefresh" Text="重新整理查詢" />
    <RoutedUICommand x:Key="Reply" Text="轉送" />
    <Style TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    <Style TargetType="DataGridCell">
        <Setter Property="FontSize" Value="14"/>
    </Style>
    <!-- 各功能畫面參數 -->
    <vm:RoutedViewResult DisplayText="新增專案" AttachedTargetElementName="Workspaces" ViewType="{x:Type view:ProjectManagerView}"  x:Key="OpenNewProjectView">
        <vm:RoutedViewResult.RoutedValues>
            <x:Static Member="sys:Guid.Empty" x:Key="SelectedProjectId"></x:Static>
            <vm:DocumentLifeCircle x:Key="Mode">Create</vm:DocumentLifeCircle>
        </vm:RoutedViewResult.RoutedValues>
    </vm:RoutedViewResult>
    <vm:RoutedViewResult DisplayText="廠商列表" AttachedTargetElementName="Workspaces" ViewType="{x:Type view:VendorListView}" x:Key="OpenVendorListView">
        
    </vm:RoutedViewResult>
    <vm:RoutedViewResult DisplayText="客戶列表" ViewType="{x:Type view:ClientListView}" AttachedTargetElementName="Workspaces" x:Key="OpenClientListView" />

    <vm:RoutedViewResult DisplayText="新增廠商" ViewType="{x:Type view:ManufacturersManageView}" AttachedTargetElementName="Workspaces" x:Key="OpenNewManufactureView"/>
    <vm:RoutedViewResult DisplayText="新增客戶" ViewType="{x:Type view:ClientManageView}" AttachedTargetElementName="Workspaces" x:Key="OpenNewClient" />
    <vm:RoutedViewResult DisplayText="模具總表" ViewType="{x:Type view:MaterialsTotalView}" AttachedTargetElementName="Workspaces" x:Key="OpenMaterialsTotalView"/>
    <vm:RoutedViewResult DisplayText="本票管理" ViewType="{x:Type view:PromissoryNoteManagementUC}"
                         AttachedTargetElementName="Workspaces" x:Key="OpenPromissoryNoteManagementView" />
    <vm:RoutedViewResult DisplayText="合約管理" ViewType="{x:Type view:ContractManagementView}"
                         AttachedTargetElementName="Workspaces" x:Key="OpenContractManagementView" />
    <vm:RoutedViewResult DisplayText="人員管理" ViewType="{x:Type view:SystemMembersView}"
                         AttachedTargetElementName="Workspaces" x:Key="OpenSystemMembersView" />
    <vm:RoutedViewResult DisplayText="角色管理" ViewType="{x:Type view:SystemRolesView}"
                         AttachedTargetElementName="Workspaces" x:Key="OpenSystemRolesView" />
    
    <vm:RoutedViewResult x:Key="OpenNewRequired" AttachedTargetElementName="InnerWorkspaces"
                                  DisplayText="需求單"
                                  ViewType="{x:Type view:RequiredView}">
    </vm:RoutedViewResult>

    <vm:RoutedViewResult x:Key="OpenOrderList" AttachedTargetElementName="InnerWorkspaces"
                                  DisplayText="加工訂製單列表"
                                  ViewType="{x:Type view:AluminumExtrusionOrderListView}"/>
    <vm:RoutedViewResult x:Key="OpenInventoryView" AttachedTargetElementName="InnerWorkspaces"
                                  DisplayText="盤點單"
                                  ViewType="{x:Type view:InventoryView}"/>


    <vm:RoutedViewResult x:Key="OpenGlassControlTable" AttachedTargetElementName="InnerWorkspaces"
                                  DisplayText="玻璃"
                                  ViewType="{x:Type view:ControlTableView}">
        <vm:RoutedViewResult.RoutedValues>
            <sys:String x:Key="FormName" >玻璃管控表</sys:String>
            <vm:DocumentLifeCircle x:Key="Mode">Read</vm:DocumentLifeCircle>
            <vm:ProjectsViewModel x:Key="SelectedProject"></vm:ProjectsViewModel>
        </vm:RoutedViewResult.RoutedValues>
    </vm:RoutedViewResult>
    <vm:RoutedViewResult x:Key="OpenConstructionAtlasView" AttachedTargetElementName="InnerWorkspaces"
                                  DisplayText="施工圖集"                                  
                                  ViewType="{x:Type view:ConstructionAtlasView}">
        <vm:RoutedViewResult.DataContent>
            <vm:ConstructionAtlasViewModelCollection />
        </vm:RoutedViewResult.DataContent>
    </vm:RoutedViewResult>
    <vm:RoutedViewResult x:Key="OpenAssemblyTableView" AttachedTargetElementName="InnerWorkspaces"
                                  DisplayText="組裝總表"
                                  ViewType="{x:Type view:AssemblyTableView}"/>
    <vm:RoutedViewResult x:Key="OpenProcessingAtlasView" AttachedTargetElementName="InnerWorkspaces"
                              DisplayText="加工圖集"
                              ViewType="{x:Type view:ProcessingAtlasView}"/>
    <vm:RoutedViewResult x:Key="OpenOrderControlTable" AttachedTargetElementName="InnerWorkspaces"
                         DisplayText="訂製單管控表" ViewType="{x:Type view:OrderControlTableView}" />
    <vm:RoutedViewResult x:Key="OpenControlTable" AttachedTargetElementName="InnerWorkspaces"
                         DisplayText="鋁擠型材料" ViewType="{x:Type view:ControlTableView}" />
    <vm:RoutedViewResult x:Key="OpenProcessingView" AttachedTargetElementName="InnerWorkspaces"
                         DisplayText="鋁擠型加工" ViewType="{x:Type view:AluminumExtrusionProcessingView}" />

    <!-- 品質異常單,TokikuNew.QualityAbnormallySingleView -->
    <vm:RoutedViewResult x:Key="OpenQualityAbnormallySingleView" AttachedTargetElementName="InnerWorkspaces"
                         DisplayText="請款單" ViewType="{x:Type view:QualityAbnormallySingleView}" />
    <!-- 請款單,TokikuNew.InvoiceView -->
    <vm:RoutedViewResult x:Key="OpenInvoiceView" AttachedTargetElementName="InnerWorkspaces"
                         DisplayText="請款單" ViewType="{x:Type view:InvoiceView}" />
    <!--請款單列表,TokikuNew.Views.InvoiceViewListView -->
    <vm:RoutedViewResult x:Key="OpenInvoiceViewListView" AttachedTargetElementName="InnerWorkspaces"
                         DisplayText="請款單列表" ViewType="{x:Type view:InvoiceViewListView}" />
    <!--退貨單,TokikuNew.Views.ReturnMaterialViewUC-->
    <vm:RoutedViewResult x:Key="OpenReturnMaterialView" AttachedTargetElementName="InnerWorkspaces"
                         DisplayText="退貨單" ViewType="{x:Type view:ReturnMaterialViewUC}" />
    <!--退貨單列表,TokikuNew.Views.ReturnMaterialListViewUC-->
    <vm:RoutedViewResult x:Key="OpenReturnMaterialListView" AttachedTargetElementName="InnerWorkspaces"
                         DisplayText="退貨單列表" ViewType="{x:Type view:ReturnMaterialListViewUC}" />
    <!--收料單,TokikuNew.RecvMaterialView-->
    <vm:RoutedViewResult x:Key="OpenRecvMaterialView" AttachedTargetElementName="InnerWorkspaces"
                         DisplayText="收料單" ViewType="{x:Type view:RecvMaterialView}" />
    <!--收料單列表,TokikuNew.Views.RecvMaterialListView-->
    <vm:RoutedViewResult x:Key="OpenRecvMaterialListView" AttachedTargetElementName="InnerWorkspaces"
                         DisplayText="收料單列表" ViewType="{x:Type view:RecvMaterialListView}" />
    <!--領料單,TokikuNew.Views.ShippingMaterialViewUC-->
    <vm:RoutedViewResult x:Key="OpenShippingMaterialView" AttachedTargetElementName="InnerWorkspaces"
                         DisplayText="領料單" ViewType="{x:Type view:ShippingMaterialViewUC}" />
    <!--領料單料單列表,TokikuNew.Views.ShippingMaterialListViewUC-->
    <vm:RoutedViewResult x:Key="OpenShippingMaterialListView" AttachedTargetElementName="InnerWorkspaces"
                         DisplayText="領料單料單列表" ViewType="{x:Type view:ShippingMaterialListViewUC}" />
</ResourceDictionary>