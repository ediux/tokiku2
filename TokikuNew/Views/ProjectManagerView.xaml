<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controller="clr-namespace:Tokiku.Controllers;assembly=Tokiku.Controllers"
             xmlns:Controls="clr-namespace:TokikuNew.Controls" xmlns:local="clr-namespace:TokikuNew.Views" x:Name="userControl" x:Class="TokikuNew.Views.ProjectManagerView"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" KeyDown="UserControl_KeyDown" Loaded="UserControl_Loaded" 
             DataContext="{Binding}" >
    <Grid Background="{DynamicResource ControlBackgroundBrush}" Margin="0,0,0,0" >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="48"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50*" />
                <RowDefinition Height="50*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>
            <GroupBox  Grid.Column="0" Grid.Row="0" Header="基本資料" Margin="5" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15*"/>
                        <ColumnDefinition Width="85*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="27" />
                        <RowDefinition Height="27" />
                        <RowDefinition Height="27" />
                        <RowDefinition Height="27" />
                        <RowDefinition Height="54" />
                        <RowDefinition Height="27" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" TextAlignment="Right" VerticalAlignment="Center" Text="專案代碼" />
                    <TextBlock Grid.Row="0" Grid.Column="1" TextAlignment="Left" VerticalAlignment="Center" Margin="2" x:Name="lblCode" Text="{Binding Code, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding CanEdit}"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" TextAlignment="Right" VerticalAlignment="Center" Text="專案全名"/>
                    <TextBox x:Name="tbName" Grid.Row="1" Grid.Column="1" Margin="2" Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding CanEdit}" TextChanged="tbName_TextChanged"/>
                    <TextBlock Grid.Row="2" Grid.Column="0" TextAlignment="Right" VerticalAlignment="Center" Text="專案簡稱"/>
                    <TextBlock x:Name="tbShortName" Grid.Row="2" Grid.Column="1" Margin="2" TextAlignment="Left" VerticalAlignment="Center" Text="{Binding ShortName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding CanEdit}"/>
                    <TextBlock Grid.Row="3" Grid.Column="0" TextAlignment="Right" VerticalAlignment="Center" Text="工程簽約日期"/>
                    <DatePicker x:Name="ProjectSigningDate" Grid.Row="3" Grid.Column="1" Margin="2" FontSize="12"  Text="{Binding ProjectSigningDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding CanEdit}" />
                    <TextBlock Grid.Row="4" Grid.Column="0" TextAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,5" Text="工地地址"/>
                    <TextBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" Margin="2" DataContext="{Binding SiteAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding CanEdit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="{Binding CanEdit, Converter={StaticResource NOTGateValueConverter}}"/>
                    <TextBlock Grid.Row="6" Grid.Column="0" TextAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,5" Text="備註"/>
                    <RichTextBox Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="3" Margin="2" DataContext="{Binding Comment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding CanEdit}" IsReadOnly="{Binding CanEdit, Converter={StaticResource NOTGateValueConverter}}"  />
                    <TextBlock Grid.Row="5" Grid.Column="0" TextAlignment="Right" VerticalAlignment="Center" Text="狀態"/>
                    <ComboBox Grid.Row="5" Grid.Column="1" Margin="2" ItemsSource="{Binding Mode=OneWay, Source=StateText}" SelectedValuePath="Id" SelectedValue="{Binding State, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding CanEdit}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding StateName}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                </Grid>
            </GroupBox>
            <GroupBox Header="客戶" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="27"/>
                        <RowDefinition Height="27"/>
                        <RowDefinition Height="27"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30*"/>
                        <ColumnDefinition Width="70*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="客戶代號" Grid.Row="0" TextAlignment="Right" VerticalAlignment="Center"/>
                    <Grid Grid.Column="1" Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60*"/>
                            <ColumnDefinition Width="40*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Row="0" Grid.Column="0" Margin="2"  IsEnabled="{Binding CanEdit}"/>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
                            <Button Content="..."/>
                            <Button Content="新增" Click="Button_Click"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="客戶名稱" Grid.Row="1" Grid.Column="0" TextAlignment="Right" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Margin="2" />


                </Grid>
            </GroupBox>
            <GroupBox Header="合約列表" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" IsEnabled="{Binding CanEdit}" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="27"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
                        <Button Content="新增" Margin="5,2"/>
                        <Button Content="停用" Margin="5,2"/>
                    </StackPanel>
                    <Controls:CustomDataGrid Grid.Row="1" Grid.Column="0">
                        <Controls:CustomDataGrid.Columns>
                            <DataGridTextColumn Header="項次"/>
                            <DataGridTextColumn Header="合約編號"/>
                            <DataGridTextColumn Header="簽約日期"/>
                            <DataGridTextColumn Header="起造日期"/>
                            <DataGridTextColumn Header="完工日期"/>
                            <DataGridTextColumn Header="狀態"/>
                            <DataGridTextColumn Header="保固到期日"/>
                            <DataGridTextColumn Header="建築師"/>
                            <DataGridTextColumn Header="建築高度"/>
                            <DataGridTextColumn Header="營造廠"/>
                            <DataGridTextColumn Header="監造單位"/>
                            <DataGridTextColumn Header="異動人員"/>
                            <DataGridTextColumn Header="付款條件"/>
                        </Controls:CustomDataGrid.Columns>
                    </Controls:CustomDataGrid>
                </Grid>
            </GroupBox>

        </Grid>

        <Controls:DockBar  Grid.Row="1" x:Name="dbar" CanEdit="{Binding CanEdit,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" DataContext="{Binding}" />

    </Grid>
</UserControl>
