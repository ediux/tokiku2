<UserControl x:Class="TokikuNew.Views.ControlTableViewUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TokikuNew.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="1024">
    <Grid>
        <GroupBox Header="管控表" VerticalAlignment="Top" Height="468" x:Name="UC">
            <DataGrid>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="項次" Width="auto" />
                    <DataGridTextColumn Header="圖集" Width="auto" />
                    <DataGridTextColumn Header="製單" Width="auto" />
                    <DataGridTextColumn Header="加工編號" Width="auto" />
                    <DataGridTextColumn Header="東菊編號" Width="auto" />
                    <DataGridTextColumn Header="單元編號" Width="auto" />
                    <DataGridTextColumn Header="材質及表面處理" Width="auto" />
                    <DataGridTextColumn Header="尺寸" Width="auto" />
                    <DataGridTextColumn Header="需求數量" Width="auto" />
                    <DataGridTextColumn Header="小計" Width="auto" />
                    
                </DataGrid.Columns>

            </DataGrid>
        </GroupBox>

    </Grid>
</UserControl>
