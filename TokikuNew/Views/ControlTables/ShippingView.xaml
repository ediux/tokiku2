<UserControl x:Class="TokikuNew.Views.ShippingMaterialViewUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c="clr-namespace:TokikuNew.Controls"
             xmlns:local="clr-namespace:TokikuNew.Views"
             mc:Ignorable="d" 
             Background="{DynamicResource ControlBackgroundBrush}"
             d:DesignHeight="600" d:DesignWidth="1024">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="27" />
            <RowDefinition Height="*" />
            <RowDefinition Height="27" />
        </Grid.RowDefinitions>
        <Canvas Grid.Row="0" Panel.ZIndex="500">
            <Expander Canvas.Left="0" VerticalAlignment="Stretch" ExpandDirection="Down" Header="功能區" IsExpanded="False">
                <Expander.ContentTemplate>
                    <DataTemplate>
                        <WrapPanel Height="82" Orientation="Horizontal" MaxWidth="1014" Width="1014">
                            <TextBlock Text="ID" Margin="2,2,0,2" VerticalAlignment="Center" />
                            <TextBox Text="54321" IsReadOnly="True" Margin="2" TextAlignment="Center" VerticalAlignment="Center" />
                            <TextBlock Text="*" VerticalAlignment="Center" Foreground="#FF0000" />
                            <TextBlock Text="出料單號" VerticalAlignment="Center" />
                            <TextBox Width="160" MaxLength="20" VerticalAlignment="Center" Margin="2" />
                            <TextBlock Text="*" VerticalAlignment="Center" Foreground="#FF0000" />
                            <TextBlock Text="來料廠商" VerticalAlignment="Center" />
                            <TextBox Width="88" MaxLength="20" VerticalAlignment="Center" Margin="2" />
                            <TextBox Width="165" MaxLength="20" VerticalAlignment="Center" Margin="2" />
                            <TextBlock Text="*" VerticalAlignment="Center" Foreground="#FF0000" />
                            <TextBlock Text="來料單號" VerticalAlignment="Center" />
                            <TextBox Width="160" MaxLength="20" VerticalAlignment="Center" Margin="2" />
                            <TextBlock Text="輸入人員" VerticalAlignment="Center" />
                            <TextBox Width="160" MaxLength="20" VerticalAlignment="Center" Margin="2" />
                            <TextBlock Text="建檔日期" VerticalAlignment="Center" />
                            <DatePicker Width="200" VerticalAlignment="Center" Margin="2" />
                            <TextBlock Text="*" VerticalAlignment="Center" Foreground="#FF0000" />
                            <TextBlock Text="製單人員" VerticalAlignment="Center" />
                            <TextBox Width="100" MaxLength="20" VerticalAlignment="Center" Margin="2" />
                            <TextBlock Text="*" VerticalAlignment="Center" Foreground="#FF0000" />
                            <TextBlock Text="製單日期" VerticalAlignment="Center" />
                            <DatePicker Width="200" VerticalAlignment="Center" Margin="2" />
                            <TextBlock Text="連絡電話" VerticalAlignment="Center" />
                            <TextBox Width="160" MaxLength="20" VerticalAlignment="Center" Margin="2" />
                            <TextBlock Text="*" VerticalAlignment="Center" Foreground="#FF0000" />
                            <TextBlock Text="倉別" VerticalAlignment="Center" Foreground="#FF036808" />
                            <TextBox Width="110" MaxLength="20" VerticalAlignment="Center" Margin="2" />
                            <TextBox Width="220" MaxLength="20" VerticalAlignment="Center" Margin="2" />
                            <TextBlock Text="備註" VerticalAlignment="Center" Foreground="#FF036808" />
                            <TextBox Width="500" MaxLength="20" VerticalAlignment="Center" Margin="2" />
                        </WrapPanel>
                    </DataTemplate>
                </Expander.ContentTemplate>
            </Expander>
        </Canvas>

        <Grid Grid.Row="1" HorizontalAlignment="Left" Height="540" Margin="10,0,0,0" VerticalAlignment="Top" Width="1006">
            <DataGrid>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="單號" Width="auto" />
                    <DataGridTextColumn Header="批號" Width="auto" />
                    <DataGridTextColumn Header="項次" Width="auto" />
                    <DataGridTextColumn Header="東菊編號" Width="auto" />
                    <DataGridTextColumn Header="廠商編號" Width="auto" />
                    <DataGridTextColumn Header="材質" Width="auto" />
                    <DataGridTextColumn Header="單位重(kg/m)" Width="auto" />
                    <DataGridTextColumn Header="訂購長度(mm)" Width="auto" />
                    <DataGridTextColumn Header="下單數量" Width="auto" />
                    <DataGridTextColumn Header="出貨順序" Width="auto" />
                    <DataGridTextColumn Header="重量" Width="auto" />
                    <DataGridTextColumn Header="缺料" Width="auto" />
                    <DataGridTextColumn Header="出料量" Width="auto" />
                    <DataGridTextColumn Header="備註" Width="auto" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        
        <Grid Grid.Row="2" HorizontalAlignment="Left" Height="31" Margin="10,0,0,6" VerticalAlignment="Bottom" Width="1006">
            <Label Content="出料筆數:" HorizontalAlignment="Left" Height="22" Margin="10,10,0,0" VerticalAlignment="Top" Width="51" Grid.Column="1"/>
            <TextBox HorizontalAlignment="Left" Height="24" Margin="66,8,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="65"/>
            <Label Content="合計:" HorizontalAlignment="Left" Height="22" Margin="149,10,0,0" VerticalAlignment="Top" Width="32"/>
            <TextBox HorizontalAlignment="Left" Height="24" Margin="186,8,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="168"/>
            <Label Content="出料總重:" HorizontalAlignment="Left" Height="22" Margin="359,10,0,0" VerticalAlignment="Top" Width="54"/>
            <TextBox HorizontalAlignment="Left" Height="24" Margin="413,5,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="139"/>
            <Label Content="KG" HorizontalAlignment="Left" Height="22" Margin="557,10,0,0" VerticalAlignment="Top" Width="32"/>
        </Grid>


    </Grid>
</UserControl>
