<UserControl x:Class="TokikuNew.Views.ContractManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TokikuNew.Views"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" Background="{DynamicResource ControlBackgroundBrush}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="512*"/>
            <ColumnDefinition Width="512*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="128*"/>
            <RowDefinition Height="128*"/>
        </Grid.RowDefinitions>
        <GroupBox Grid.Column="0" Grid.Row="0"  Grid.ColumnSpan="2" Margin="5" Header="合約項目(工程項目)">
            <DataGrid Margin="5" VerticalAlignment="Stretch" KeyDown="DataGrid_KeyDown" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header=""/>
                    <DataGridTextColumn Header="工程代碼"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        <GroupBox Header="施工圖集" Grid.Row="1" Grid.Column="0" Margin="5"></GroupBox>
        <GroupBox Header="加工圖集" Grid.Row="1" Grid.Column="1" Margin="5"></GroupBox>
    </Grid>
</UserControl>
