<UserControl x:Class="TokikuNew.Controls.SwitchField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TokikuNew.Controls"
             mc:Ignorable="d" 
             x:Name="userControl"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBlock Style="{DynamicResource ReadModeSwitch_TextBlock}" Text="{Binding Path=DataContent,ElementName=userControl,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
        
    </Grid>
</UserControl>
