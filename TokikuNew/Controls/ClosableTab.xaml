<UserControl x:Class="TokikuNew.Controls.ClosableTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TokikuNew.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="27" d:DesignWidth="300">
    <Grid Margin="1,0,1,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <ContentPresenter Grid.Column="0"  HorizontalAlignment="Left" Margin="5,2"  VerticalAlignment="Center" RecognizesAccessKey="True" ContentSource="Header" />
        <Button Grid.Column="1" Grid.Row="0" Margin="-1,0,0,0" x:Name="btnTabClose" FontSize="8" Width="13" Height="13" FontFamily="Segoe MDL2 Assets" Content="&#xe10a;" Click="btnTabClose_Click" ></Button>
    </Grid>
</UserControl>
